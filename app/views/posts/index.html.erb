<h1>Posts</h1>

 <%- if current_user %>
<table> 
  <thead>
    <tr>
      &nbsp;<th><PRE>Post ID</th>
      &nbsp;<th><PRE>Post description</th>
      &nbsp;<th><PRE>No of comments</th>
      &nbsp;<th colspan="3">&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        &nbsp;<td><%= post.id %></td>
        &nbsp;<td><%= post.description %></td>
        &nbsp;<td><%= post.comments.length %></td>
        &nbsp;<td>&nbsp;<%= link_to 'View', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
<p>
  Please Login or Register to view posts
</p>
<% end%>

