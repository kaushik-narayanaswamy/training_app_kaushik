<h1>Post</h1>
<table>
  <thead>
    <tr>
      <th><PRE>Post ID</th>
      <th><PRE>Post Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   
      <tr>
        <td><%= @post.id %></td>
        <td><%= @post.description %></td>
        <td> &nbsp;&nbsp;<%= link_to 'Edit', edit_post_path(@post)%> </td>
      </tr>

  </tbody>
</table>


<br>
<br>

<% if @comments.present? %>
<table>
  <thead>
    <tr>
      <th><PRE>Commentid</th>
      <th><PRE>Comment Body</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.body %></td>
        <td><%= link_to 'View', comment %>
        <td>&nbsp;&nbsp;&nbsp;<%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
<p> No commments for this post yet. Be the first to comment on it </p>
<% end %>

<br>
<br>
<%= form_for :comment, url: "/comments", method: "post" do |f| %>

  <%= f.text_field :body %>
  <%= f.hidden_field :post_id, :value => @post.id %>
  <%= f.submit "Save" %>
<% end %>

<br>
<br>

<p>
  <%= link_to "Home", root_path%>
</p>